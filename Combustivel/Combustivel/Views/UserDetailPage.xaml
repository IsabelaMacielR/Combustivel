<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Combustivel.Views.UserDetailPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Desativar" Command="{Binding DesUserCommand}" />
    </ContentPage.ToolbarItems>

    <StackLayout Spacing="5" Padding="15">
        <Label Text="Nome:" FontSize="Medium" />
        <Label Text="{Binding Nome}" FontSize="Small"/>
        <Label Text="CPF:" FontSize="Medium" />
        <Label Text="{Binding CPF}" FontSize="Small"/>
        <Label Text="Tipo:" FontSize="Medium" />
        <Label Text="{Binding Tipo}" FontSize="Small"/>
    </StackLayout>
    
</ContentPage>